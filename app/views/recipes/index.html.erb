<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Recipe Book</h1>
    <hr>
    <% if @recipes.any? %>
      <% @recipes.each do |recipe| %>
        <h4>
          <%= recipe.name %>
          <span class="pull-right">
            <%= link_to "View Recipe", recipe_path(recipe), class: "btn btn-default pull-right" %>
          </span>
        </h4>
        <p><%= recipe.instructions %></p>
        <p>
          <a href="javascript:void(0)" class="favorite" data-id="<%= recipe.id %>">
            <!-- check if current_user has already favorited recipe to show correct star icon -->
            <% if current_user.favorite_recipes.include? recipe %>
              <span class="glyphicon glyphicon-star"></span>
            <% else %>
              <span class="glyphicon glyphicon-star-empty"></span>
            <% end %>
          </a>
        </p>
        <hr>
      <% end %>
    <% else %>
      <p>No recipes yet!</p>
      <hr>
    <% end %>

    <% if current_user %>
      <%= link_to "Add New Recipe", new_recipe_path, class: "btn btn-default" %>
    <% end %>
  </div>
</div>